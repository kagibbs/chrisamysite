---
// src/pages/swiper.astro
// import MySwiper from '../components/MySwiper.jsx';
import { Img } from "astro-imagetools/components";
import "@fontsource-variable/jost";
---

<style>
	html,
	body {
		position: relative;
		height: 100%;
	}

	body {
		background: #eee;
		font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
		font-size: 14px;
		color: #000;
		margin: 0;
		padding: 0;
	}

	.swiper {
		width: 100%;
		height: 100%;
	}

	.swiper-slide {
		background-position: center;
		background-size: cover;
	}

	.swiper-slide img {
		display: block;
		height: 100%;
		width: auto;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
		object-position: 34% 36%;
		object-fit: cover;
	}
	.introOverlay {
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 999999;
		background-color: rgba(55, 55, 55, 0.7);
		color: #ffffff;
		display: flex;
		text-align: center;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		font-family: "Montserrat Variable", sans-serif;
		text-transform: uppercase;
	}

	.introOverlay h1 {
		font-family: "Jost Variable", sans-serif;
		font-size: 8em;
		font-weight: 500;
	}

	.introOverlay a {
		text-transform: uppercase;
		border: 2px solid;
		padding: 1em 1.44em;
		letter-spacing: 0.2em;
		transition: background-color 170ms ease-in-out;
	}

	.introOverlay a:hover {
		background-color: #ffffff;
		color: #181818;
		border-color: transparent;
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/src/images/favicon.svg" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
		<meta name="generator" content={Astro.generator} />
		<title>Chris and Amy Say I Do</title>
	</head>
	<body>
		<div class="swiper mySwiper">
			<div class="swiper-wrapper">
				<div class="swiper-slide">
					<Img src="/src/images/intro/intro1.jpg" alt="chris and amy" layout="fill" />
				</div>
				<div class="swiper-slide">
					<Img src="/src/images/intro/intro2.jpg" alt="lifetime pinky promise" layout="fill" />
				</div>
				<div class="swiper-slide">
					<Img src="/src/images/intro/intro3.jpg" alt="fight of a lifetime" layout="fill" />
				</div>
				<div class="swiper-slide">
					<Img src="/src/images/intro/intro4.jpg" alt="forever diamond in the snow" layout="fill" />
				</div>
				<div class="swiper-slide">
					<Img src="/src/images/intro/intro5.jpg" alt="walking together forever" layout="fill" />
				</div>
			</div>
		</div>
		<div class="introOverlay">
			<h1>Chris & Amy</h1>
			<a href="/tale">Welcome</a>
		</div>
	</body>
</html>

<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script>
	var swiper = new Swiper(".mySwiper", {
		effect: "fade",
		speed: 1000,
		loop: true,
		autoplay: {
			delay: 3500,
		},
	});
</script>
